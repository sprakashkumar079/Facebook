        </section>
     </aside>
     <div class="col-md-8"> <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
    
  <% else %>
    <h1>Welcome to world with Facebook</h1>
    This is the home page for the
    <a href="https://hidden-ocean-29030.herokuapp.com/">Facebook</a>
