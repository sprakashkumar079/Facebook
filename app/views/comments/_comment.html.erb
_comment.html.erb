<%object.comments.each do |comment|%>
  <div class="container">
    <div class="col-md-8">
      <div class=" p-2">
        <div class="row mt-3">
          <div class="ml-2">
          <% if comment.user.image_url %>
            <%= image_tag(comment.user.image.url, class: "img-profile")%>
          <%end%>
          </div>
          <div class="mt-2">
            <div class="col font-weight-bold">
              <%= link_to user_path(comment.user), class: "font-raleway" do%>
                <%= comment.user.full_name %>
              <%end%>
            </div>
            <div class="col size-12">Posted <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</div>
          </div>
        </div>
        <div class= "row ml-5 pl-1">
          <div class="col-auto font-rale text-post">
            <%= comment.content %>
            <% if current_user.id == comment.user_id%>
              <%= link_to comment_path(comment), method: :delete, data: { confirm: "You sure?" } do %>
                <i class="fas fa-trash hover-red"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="row ml-5 pl-1">
          <div class="col-auto"><%= render 'likes/like_comments', object: comment%></div>
        </div>

      </div>
    </div>
  </div>
<%end%>